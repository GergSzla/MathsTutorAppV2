<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:elevation="24dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">


        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/numberX" android:layout_marginRight="12dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/symbol"
                android:layout_toRightOf="@+id/numberX"
                android:layout_marginRight="12dp" android:layout_marginLeft="25dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/numberY"
                android:layout_toRightOf="@+id/symbol"
                android:layout_marginRight="12dp" android:layout_marginLeft="25dp"/>
        <TextView
                android:id="@+id/equals"

                android:text="="
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/numberY"
                android:layout_marginRight="12dp" android:layout_marginLeft="25dp"/>

        <android.support.design.widget.TextInputEditText
                android:id="@+id/challengeAnswer"
                android:layout_width="58dp"
                android:layout_height="24dp"
                android:inputType="text"
                android:maxLength="25"
                android:maxLines="1"
                android:layout_toRightOf="@+id/equals"

                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="31dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>