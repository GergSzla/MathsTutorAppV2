<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="org.wit.mathstutorappv2.activities.ResultsAddActivity">



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="-3dp"
            tools:layout_editor_absoluteX="0dp">

        <android.support.design.widget.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:fitsSystemWindows="true"
                app:elevation="0dip"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbarAdd"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:titleTextColor="@color/colorPrimary"
                    android:layout_alignTop="@+id/appBarLayout"/>
        </android.support.design.widget.AppBarLayout>



    </LinearLayout>
    <LinearLayout
            android:background="#9C4580F5"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="How many of the 10 questions did you answer correctly on your first try? \n(Answer Honestly)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:id="@+id/textView3" android:textSize="18sp"
                android:textStyle="bold" android:textAlignment="center"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:inputType="number"
                android:hint="Your Score Out Of 10"
                android:ems="10"
                android:id="@+id/txtScore" android:textAlignment="center" android:background="#CACACA"/>
        <Button
                android:text="Save Your Score"
                android:background="#C06503"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnAddScore"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>